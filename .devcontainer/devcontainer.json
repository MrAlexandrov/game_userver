{
    "image": "ghcr.io/userver-framework/ubuntu-22.04-userver-pg-dev",
    "remoteUser": "user",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/user/game_userver,type=bind",
    "workspaceFolder": "/home/user/game_userver",
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ],
    "forwardPorts": [
        8080,
        8081
    ],
    "mounts": [
        "source=${localEnv:HOME}/.ssh/github,target=/home/user/.ssh/github,type=bind,consistency=cached"
    ],
    "containerEnv": {
        "SHELL": "/bin/bash",
        "PREFIX": "${PREFIX:-~/.local}",
        "CCACHE_DIR": "/home/user/game_userver/.ccache",
        "CORES_DIR": "/cores"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "llvm-vs-code-extensions.vscode-clangd",
                "ms-vscode.cmake-tools",
                "ms-vscode.makefile-tools",
                "vadimcn.vscode-lldb",
                "ms-azuretools.vscode-docker",
                "ms-python.python",
                "ms-python.vscode-pylance"
            ],
            "settings": {
                "cmake.automaticReconfigure": false,
                "cmake.configureOnEdit":  false,
                "cmake.configureOnOpen": false,
                "cmake.copyCompileCommands": "${workspaceFolder}/.vscode/compile_commands.json",
                "clangd.path": "/usr/bin/clangd",
                "clangd.arguments": [
                    "--background-index",
                    "--compile-commands-dir=.vscode",
                    "--clang-tidy",
                    "--completion-style=detailed",
                    "--header-insertion=never"
                ],
                "python.defaultInterpreterPath": "/usr/bin/python3",
                "python.analysis.autoSearchPaths": true,
                "python.analysis.diagnosticMode": "workspace",
                "python.analysis.extraPaths": [
                    "${workspaceFolder}/build-debug/testsuite",
                    "${workspaceFolder}/build-debug/proto",
                    "${workspaceFolder}/build-debug/proto/handlers",
                    "${workspaceFolder}/tests",
                    "${workspaceFolder}/tests/helpers"
                ],
                "protoc": {
                    "options": [
                        "--proto_path=${workspaceFolder}/proto"
                    ]
                }
            }
        }
    },
    "postCreateCommand": "sudo apt-get install -y openssh-client && ssh-add ~/.ssh/github && git config --global --add safe.directory /home/user/game_userver"
}